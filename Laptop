package DAKhoMayTinh;

public class Laptop extends MayTinh {

    private String Size, Screen;
    private double Camera, PIN;
    private boolean CamUngMan;

    public Laptop() {
    }

    public Laptop(String Name, String NSX, String Code, String CPU, String CardDoHoa, double RAM, double ROM, int Price, NgayNhapXuat date, String Size, String Screen, double Camera, double PIN, boolean CamUngMan) {
        super(Name, NSX, Code, CPU, CardDoHoa, RAM, ROM, Price, date);
        this.Size = Size;
        this.Screen = Screen;
        this.Camera = Camera;
        this.PIN = PIN;
        this.CamUngMan = CamUngMan;
    }

    public String getSize() {
        return Size;
    }

    public void setSize(String Size) {
        this.Size = Size;
    }

    public String getScreen() {
        return Screen;
    }

    public void setScreen(String Screen) {
        this.Screen = Screen;
    }

    public double getCamera() {
        return Camera;
    }

    public void setCamera(double Camera) {
        this.Camera = Camera;
    }

    public double getPIN() {
        return PIN;
    }

    public void setPIN(double PIN) {
        this.PIN = PIN;
    }

    public boolean isCamUngMan() {
        return CamUngMan;
    }

    public void setCamUngMan(boolean CamUngMan) {
        this.CamUngMan = CamUngMan;
    }

    @Override
    public String toString() {
        return "Laptop{" + super.toString() + ", Size=" + Size + ", Screen=" + Screen + ", Camera=" + Camera + "MB" + ", PIN=" + PIN + "mAh" + ", CamUngMan=" + CamUngMan + '}';
    }
}
